.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

.addr-list {
  max-height: 70vh;
}

.addr-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.addr-main .row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.detail {
  font-size: 26rpx;
  color: #666;
}

.addr-extra {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  font-size: 24rpx;
  color: #999;
}

.default-btn {
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #d62f35;
}

.default-text {
  font-size: 24rpx;
  color: #d62f35;
}

.add-btn {
  position: fixed;
  left: 40rpx;
  right: 40rpx;
  bottom: 40rpx;
  background: #d62f35;
  color: #fff;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 80rpx;
}

.mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}

.form-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 20rpx 30rpx 40rpx;
  box-sizing: border-box;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.form-item .label {
  width: 150rpx;
  font-size: 28rpx;
}

.input {
  flex: 1;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx 0;
  font-size: 28rpx;
}

.form-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

.btn {
  min-width: 160rpx;
  font-size: 28rpx;
}

.btn.cancel {
  background: #f5f5f5;
  color: #333;
  margin-right: 20rpx;
}

.btn.submit {
  background: #d62f35;
  color: #fff;
}

