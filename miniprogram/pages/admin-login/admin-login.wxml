<view class="container">
  <view class="login-card">
    <view class="title">商家后台管理</view>
    <view class="subtitle">KFC Backend System</view>
    
    <view class="input-group">
      <view class="label">账号</view>
      <input 
        class="input" 
        placeholder="请输入管理员账号" 
        placeholder-class="placeholder"
        bindinput="onInputUsername" 
        value="{{username}}" 
      />
    </view>

    <view class="input-group">
      <view class="label">密码</view>
      <input 
        class="input" 
        password="true" 
        type="text" 
        placeholder="请输入登录密码" 
        placeholder-class="placeholder"
        bindinput="onInputPwd" 
        value="{{password}}" 
      />
    </view>

    <button class="login-btn" bindtap="handleLogin">立即登录</button>
  </view>
</view>