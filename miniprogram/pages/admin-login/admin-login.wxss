/* 页面容器：全屏浅灰色背景，Flex 居中 */
page {
  height: 100%;
  background-color: #f5f5f5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 登录卡片 */
.login-card {
  width: 100%;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
}

/* 标题 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-bottom: 60rpx;
  letter-spacing: 2rpx;
}

/* 输入框组 */
.input-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  background-color: #f8f8f8;
  height: 88rpx;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  /* 边框微调，看起来更精致 */
  border: 1rpx solid #eeeeee;
}

.placeholder {
  color: #cccccc;
}

/* 登录按钮 */
.login-btn {
  background-color: #d81e06; /* KFC 红 */
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  margin-top: 60rpx;
  box-shadow: 0 6rpx 16rpx rgba(216, 30, 6, 0.3);
}

.login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}