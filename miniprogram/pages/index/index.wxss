page {
  background-color: #f5f5f5;
  height: 100vh;
}

.container {
  padding: 0;
  position: relative;
}

/* Banner */
.banner-area {
  width: 100%;
  height: 400rpx;
  position: relative;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.privacy-tag {
  position: absolute;
  top: 40rpx;
  right: 0;
  background-color: rgba(0,0,0,0.3);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

/* 悬浮卡片 */
.card-container {
  padding: 0 20rpx;
  margin-top: -60rpx;
  position: relative;
  z-index: 10;
}

.user-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
}

.user-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-left {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.username {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.user-actions {
  display: flex;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 40rpx;
  font-size: 22rpx;
  color: #666;
}

.icon {
  font-size: 36rpx;
  margin-bottom: 6rpx;
}

.store-info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.store-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.arrow-down {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.store-address {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.store-hours {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 20rpx;
}

.store-tags {
  display: flex;
}

.tag {
  background-color: #f5f5f5;
  color: #666;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
}

.store-img-wrap {
  position: relative;
}

.store-img {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background-color: #eee;
}

.img-count {
  position: absolute;
  bottom: 0;
  right: 0;
  background-color: rgba(0,0,0,0.5);
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-top-left-radius: 8rpx;
}

/* 开始点餐按钮 */
.start-order-btn {
  background-color: #C00000;
  color: white;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  box-shadow: 0 4rpx 10rpx rgba(192, 0, 0, 0.3);
  margin-bottom: 30rpx;
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.btn-text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.main-text {
  font-size: 36rpx;
  font-weight: bold;
}

.sub-text {
  font-size: 20rpx;
  opacity: 0.8;
}

/* 大神卡广告 */
.promo-section {
  background-color: #333;
  border-radius: 20rpx;
  padding: 20rpx;
  color: #dcb372;
}

.promo-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.promo-cards {
  display: flex;
  justify-content: space-between;
}

.promo-card {
  width: 48%;
  background-color: white;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  padding: 10rpx;
}

.food-img {
  width: 100rpx;
  height: 100rpx;
  background-color: #eee;
  margin-right: 10rpx;
}

.promo-info {
  flex: 1;
  position: relative;
}

.food-name {
  font-size: 24rpx;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.vip-price {
  color: #C00000;
  font-weight: bold;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.orig-price {
  color: #999;
  font-size: 20rpx;
  text-decoration: line-through;
}

.add-mini {
  position: absolute;
  bottom: 0;
  right: 0;
  background-color: #C00000;
  color: white;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.footer-text {
  text-align: center;
  color: #999;
  font-size: 22rpx;
  margin-top: 40rpx;
}


