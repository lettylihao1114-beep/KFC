page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', sans-serif;
}

.container { padding: 0; position: relative; }

/* 1. 头部 */
.header-area {
  position: relative;
  height: 560rpx; /* 加高一点背景图 */
  width: 100%;
}
.bg-swiper, .bg-image { width: 100%; height: 100%; }
/* 给图片加个渐变遮罩，防止文字看不清 */
.bg-image { filter: brightness(0.95); }

/* 定位条 - 胶囊样式 */
.location-bar {
  position: absolute;
  top: 180rpx; left: 30rpx;
  background: rgba(0,0,0,0.5);
  padding: 8rpx 24rpx;
  border-radius: 40rpx;
  display: flex; align-items: center;
  backdrop-filter: blur(4px);
  z-index: 10;
}
.loc-text { color: #fff; font-size: 24rpx; max-width: 300rpx; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; margin: 0 10rpx; }
.loc-btn { color: #fff; font-size: 24rpx; font-weight: bold; }

/* 2. 内容层 - 向上浮动覆盖背景 */
.content-layer {
  position: relative;
  margin-top: -140rpx; /* 关键：大幅上移 */
  padding: 0 24rpx;
  z-index: 20;
}

/* A. 会员卡 */
.member-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  margin-bottom: 24rpx;
  position: relative;
}
.user-info { display: flex; align-items: center; }
.avatar { width: 90rpx; height: 90rpx; border-radius: 50%; margin-right: 24rpx; background: #f0f0f0; }
.user-text { flex: 1; }
.welcome-row { display: flex; justify-content: space-between; align-items: center; margin-bottom: 8rpx; }
.welcome { font-size: 32rpx; font-weight: bold; color: #333; }
.qr-box { font-size: 40rpx; }
.assets-row { font-size: 22rpx; color: #666; display: flex; align-items: center; }
.divider { margin: 0 12rpx; color: #eee; }

/* B. 核心业务区 (红底) - 重点重构 */
.main-action-area {
  position: relative;
  margin-bottom: 30rpx;
  padding-top: 10rpx; /* 给凸起的按钮留点空间 */
}

/* 红色背景实体 */
.red-bg-layer {
  background: linear-gradient(180deg, #D62F36 0%, #BE0000 100%);
  border-radius: 20rpx;
  position: absolute;
  top: 40rpx; /* 让背景稍微靠下，为了让中间按钮凸出去 */
  left: 0; right: 0; bottom: 0;
  z-index: 1;
  box-shadow: 0 8rpx 20rpx rgba(214, 47, 54, 0.3);
}

.action-grid {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-around;
  align-items: flex-end; /* 底部对齐 */
  padding-bottom: 30rpx;
  height: 260rpx; /* 这里的固定高度是为了定住布局 */
}

.action-item {
  display: flex; flex-direction: column; align-items: center;
  width: 30%;
}

/* 普通圆圈 (外卖/咖啡) */
.circle-box {
  width: 100rpx; height: 100rpx;
  background: #fff;
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}
.icon-img-normal { width: 60%; height: 60%; } /* 稍微调大 */

/* 中间大圆圈 (自取) - 核心凸起逻辑 */
.center-item { 
  margin-bottom: 10rpx; 
}
.circle-box-big {
  width: 140rpx; height: 140rpx;
  background: #fff;
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 10rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.15);
  border: 6rpx solid rgba(255,255,255,0.3); /* 增加一点外光晕感 */
  background-clip: padding-box;
  /* 关键：让它往上跑，产生凸出感 */
  margin-top: -30rpx; 
}
.icon-img-big { width: 75%; height: 75%; } /* 中间图标更饱满 */

.action-title { color: #fff; font-size: 28rpx; font-weight: bold; }
.big-title { font-size: 32rpx; margin-bottom: 4rpx; }
.action-sub { color: rgba(255,255,255,0.8); font-size: 20rpx; }

/* C. 次级导航 */
.sub-nav-grid {
  background: #fff; border-radius: 16rpx;
  padding: 30rpx 0; display: flex; justify-content: space-around;
  margin-bottom: 24rpx;
}
.nav-item { display: flex; flex-direction: column; align-items: center; }
.nav-icon { font-size: 44rpx; margin-bottom: 12rpx; }
.nav-text { font-size: 24rpx; color: #333; }

/* D. 广告图 */
.promo-banner { width: 100%; border-radius: 16rpx; overflow: hidden; margin-bottom: 20rpx; }
.wide-img { width: 100%; display: block; }
.footer-spacer { height: 100rpx; }