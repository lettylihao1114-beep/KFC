<view class="container">
  <view class="title">账号密码登录</view>

  <view class="input-group">
    <input class="input-field" type="text" placeholder="请输入账号" placeholder-class="placeholder" bindinput="onUsernameInput" value="{{username}}"/>
  </view>

  <view class="input-group">
    <input class="input-field" type="password" placeholder="请输入密码" placeholder-class="placeholder" bindinput="onPasswordInput" value="{{password}}"/>
  </view>

  <button class="login-btn {{canLogin ? 'active' : ''}}" bindtap="handleLogin">登录店长端</button>
</view>
