<view class="container">
  <view class="header">
    <view class="title">密码登录</view>
    <view class="subtitle">欢迎回到肯德基点餐系统</view>
  </view>

  <view class="form-area">
    <view class="input-group">
      <view class="label">账号</view>
      <input class="input" placeholder="请输入用户名" bindinput="onUsernameInput" value="{{username}}" />
    </view>

    <view class="input-group">
      <view class="label">密码</view>
      <input class="input" password type="text" placeholder="请输入密码" bindinput="onPasswordInput" value="{{password}}" />
    </view>
  </view>

  <button 
    class="btn-login {{canLogin ? '' : 'disabled'}}" 
    bindtap="handleLogin"
  >立即登录</button>
</view>