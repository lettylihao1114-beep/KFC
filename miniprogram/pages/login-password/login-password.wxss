.container {
  padding: 60rpx 40rpx;
  background-color: #fff;
  height: 100vh;
}
.header { margin-bottom: 80rpx; }
.title { font-size: 52rpx; font-weight: bold; color: #333; margin-bottom: 16rpx; }
.subtitle { font-size: 28rpx; color: #999; }
.input-group { border-bottom: 1rpx solid #eee; padding: 20rpx 0; margin-bottom: 40rpx; }
.label { font-size: 28rpx; color: #333; margin-bottom: 10rpx; font-weight: 500; }
.input { font-size: 34rpx; height: 80rpx; color: #333; }
.btn-login {
  background-color: #d81e06; color: white; border-radius: 50rpx; 
  font-weight: bold; margin-top: 80rpx; transition: all 0.3s;
}
.btn-login.disabled { background-color: #f5a693; color: rgba(255,255,255,0.8); }
.btn-login:active { opacity: 0.9; }