.container {
  padding: 40rpx;
  background: #fff;
  height: 100vh;
  box-sizing: border-box;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-top: 40rpx;
  margin-bottom: 80rpx;
  color: #333;
}

.input-group {
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}

.input-field {
  font-size: 32rpx;
  color: #333;
  width: 100%;
}

.placeholder {
  color: #ccc;
}

.login-btn {
  background: #ccc;
  color: #fff;
  border-radius: 50rpx;
  padding: 24rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 80rpx;
}

.login-btn.active {
  background: #d62f35;
}
