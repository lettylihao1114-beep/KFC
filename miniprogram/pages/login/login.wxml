<view class="container">
  <view class="logo-area">
    <view class="kfc-logo">
      <text class="logo-text">KFC</text>
    </view>
    <view class="slogan">欢迎来到肯德基自助点餐</view>
  </view>

  <view class="action-area">
    <button class="one-click-btn" bindtap="handleOneClickLogin">
      微信一键登录会员
    </button>

    <view class="secondary-btn" bindtap="goToMobileLogin">
      手机验证码登录会员
    </view>

    <view class="secondary-btn" bindtap="goToPasswordLogin">
      账号密码登录
    </view>

    <view class="register-entry" bindtap="goToRegister">
      没有账号？<text class="highlight">立即注册</text>
    </view>
  </view>

  <view class="agreement-area">
    <view class="agreement-row" bindtap="toggleAgree">
      <view class="checkbox {{isAgreed ? 'checked' : ''}}">
        <text wx:if="{{isAgreed}}" class="check-mark">✔</text>
      </view>
      
      <view class="agreement-text">
        登录即代表您已阅读并同意
        <text class="link">《用户协议》</text>
        <text class="link">《隐私政策》</text>
      </view>
    </view>
  </view>
</view>