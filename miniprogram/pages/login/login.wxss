/* 全局容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
  padding: 60rpx;
  box-sizing: border-box;
}

/* 1. Logo 区域 */
.logo-area {
  flex: 1; /* 撑开上部空间 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.kfc-logo {
  width: 140rpx;
  height: 140rpx;
  background-color: #d81e06; /* KFC红 */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(216, 30, 6, 0.3);
}

.logo-text {
  color: #fff;
  font-size: 40rpx;
  font-weight: 900;
  font-style: italic;
}

.slogan {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-top: 20rpx;
}

/* 2. 操作区域 */
.action-area {
  width: 100%;
  margin-bottom: 60rpx;
}

/* 一键登录 (红底白字) */
.one-click-btn {
  background-color: #07c160; /* 微信绿，或者改成 #d81e06 KFC红 */
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 30rpx;
}

/* 次要按钮 (灰底黑字) */
.secondary-btn {
  background-color: #f5f5f5;
  color: #333;
  font-size: 30rpx;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  font-weight: 500;
}

/* 注册入口 */
.register-entry {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-top: 30rpx;
  padding: 20rpx 0;
}
.highlight {
  color: #d81e06;
  font-weight: bold;
  margin-left: 10rpx;
}

/* 3. 协议区域 */
.agreement-area {
  margin-bottom: 40rpx;
}

.agreement-row {
  display: flex;
  align-items: flex-start;
}

/* 自定义 Checkbox */
.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
  margin-right: 12rpx;
  margin-top: 4rpx; /* 微调对齐 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  background-color: #d81e06;
  border-color: #d81e06;
}

.check-mark {
  color: #fff;
  font-size: 20rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  flex: 1;
}

.link {
  color: #576b95;
  display: inline;
}