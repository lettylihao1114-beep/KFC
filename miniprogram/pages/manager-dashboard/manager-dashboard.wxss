.container {
  height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.header-card {
  background: #d62f35;
  color: #fff;
  padding: 30rpx;
  padding-bottom: 40rpx;
}

.shop-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.shop-name {
  font-size: 32rpx;
  font-weight: bold;
}

.status-tag {
  font-size: 24rpx;
  background: rgba(255,255,255,0.2);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item .num {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* Tabs */
.tabs {
  background: #fff;
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #eee;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #d62f35;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #d62f35;
}

/* List */
.order-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 28rpx;
}

.order-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f8f8f8;
  padding-bottom: 15rpx;
}

.order-num {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-content {
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.price {
  font-weight: bold;
  color: #d62f35;
  font-size: 32rpx;
}

.items-desc {
  font-size: 24rpx;
  color: #999;
}

.card-actions {
  display: flex;
  justify-content: flex-end;
}

.card-actions button {
  margin: 0;
  margin-left: 20rpx;
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.btn-detail {
  background: #f5f5f5;
  color: #666;
}

.btn-primary {
  background: #d62f35;
  color: #fff;
}

.btn-success {
  background: #07c160;
  color: #fff;
}
