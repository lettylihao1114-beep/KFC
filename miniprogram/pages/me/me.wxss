/* 1. 黑金卡背景覆盖 */
.vip-card.black-gold {
  background: linear-gradient(135deg, #2b2b2b, #000000);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.3);
  border: 1px solid #444;
}

/* 2. 金色文字 (用于标题、权益等) */
.gold-text {
  color: #e0cfa5 !important; /* 香槟金 */
}

/* 3. 金色按钮 (用于"会员权益"按钮) */
.gold-btn {
  background: #e0cfa5 !important;
  color: #000 !important;
  font-weight: bold;
}