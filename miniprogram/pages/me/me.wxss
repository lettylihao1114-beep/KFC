.container { background: #f5f5f5; min-height: 100vh; }
.header { background: #d62f35; padding: 40rpx 30rpx; display: flex; align-items: center; color: #fff; }

.avatar-placeholder { 
  width: 100rpx; height: 100rpx; border-radius: 50%; background: #fff; 
  color: #333; font-size: 50rpx; display: flex; justify-content: center; align-items: center; 
  margin-right: 20rpx;
}

.nickname { font-size: 36rpx; font-weight: bold; }
.vip-tag { font-size: 24rpx; background: #333; color: #dcb372; padding: 4rpx 12rpx; border-radius: 20rpx; display: inline-block; margin-top: 10rpx; }
.vip-tag.normal { background: rgba(255,255,255,0.2); color: #fff; }
.desc { font-size: 24rpx; opacity: 0.8; margin-top: 6rpx; }
.vip-expire { font-size: 24rpx; margin-top: 6rpx; }

.tabs { display: flex; background: #fff; padding: 20rpx 0; }
.tab { flex: 1; text-align: center; font-size: 30rpx; position: relative; }
.tab.active { color: #d62f35; font-weight: bold; }
.tab.active::after { content: ''; position: absolute; bottom: -10rpx; left: 50%; transform: translateX(-50%); width: 40rpx; height: 4rpx; background: #d62f35; }

.quick-actions { background: #fff; padding: 20rpx 30rpx; display: flex; justify-content: space-between; }
.quick-item { font-size: 28rpx; color: #333; padding: 10rpx 0; }

.content-area { height: calc(100vh - 400rpx); padding: 20rpx; box-sizing: border-box; }
.empty-tip { text-align: center; color: #999; margin-top: 100rpx; }

.order-card { background: #fff; padding: 20rpx; border-radius: 12rpx; margin-bottom: 20rpx; }
.order-header { display: flex; justify-content: space-between; font-size: 24rpx; color: #999; margin-bottom: 10rpx; }
.order-body { display: flex; justify-content: space-between; align-items: center; font-size: 30rpx; }
.amount { font-weight: bold; color: #333; }

.voucher-card { background: #fff; display: flex; margin-bottom: 20rpx; border-radius: 12rpx; overflow: hidden; }
.v-left { background: #fff5f5; color: #d62f35; width: 160rpx; display: flex; justify-content: center; align-items: center; padding: 20rpx 0; }
.v-price { font-size: 28rpx; }
.v-price .big { font-size: 48rpx; font-weight: bold; }
.v-right { padding: 20rpx; flex: 1; display: flex; flex-direction: column; justify-content: center; }
.v-title { font-weight: bold; font-size: 30rpx; }
.v-desc { color: #999; font-size: 24rpx; margin-top: 6rpx; }

.logout-btn { margin: 40rpx; background: #fff; color: #333; text-align: center; padding: 20rpx; border-radius: 40rpx; }
