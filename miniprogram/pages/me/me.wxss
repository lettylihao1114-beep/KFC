.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding-bottom: 40rpx;
}

/* 头部 */
.header-section {
  background: #fff;
  padding: 30rpx 30rpx 0 30rpx;
}

.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-box {
  margin-right: 20rpx;
}

.avatar, .avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
}

.user-meta {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.vip-badge {
  font-size: 20rpx;
  background: #333;
  color: #dcb372;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  margin-left: 10rpx;
}

.phone {
  font-size: 26rpx;
  color: #999;
  margin-top: 6rpx;
}

/* VIP Banner Bar (顶部横条) */
.vip-banner-bar {
  background: #fff5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 12rpx 12rpx 0 0;
}

.bar-left {
  font-size: 24rpx;
  color: #333;
}

.bar-close {
  color: #999;
  margin-right: 10rpx;
}

.bar-btn {
  background: #d62f35;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

/* VIP Card Area (核心卡片区域) */
.vip-card-container {
  padding: 0 30rpx;
  margin-top: -10rpx;
  margin-bottom: 20rpx;
  background: #fff;
  padding-bottom: 20rpx;
}

/* 默认卡片样式 (普通用户 - 浅金色/米色) */
.vip-card {
  background: linear-gradient(135deg, #faeec7, #f3dcb1);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(220, 179, 114, 0.2);
  /* 添加过渡效果，让切换更丝滑 */
  transition: all 0.3s ease; 
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #5d401e;
  display: block;
}

.card-subtitle {
  font-size: 24rpx;
  color: #8c714b;
  margin-top: 8rpx;
  display: block;
}

.card-btn-round {
  background: #4e3a2a;
  color: #fcebc8;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
}

.benefits-row {
  display: flex;
  justify-content: space-between;
}

.benefit-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.benefit-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.benefit-text {
  font-size: 20rpx;
  color: #5d401e;
}

/* Stats Card (数据统计) */
.stats-card {
  background: #fff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-num {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  font-family: 'DIN', sans-serif; /* 优化数字字体 */
}

.stat-unit {
  font-size: 24rpx;
  font-weight: normal;
  margin-left: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.coin-icon {
  background: #d4a04d;
  color: #fff;
  border-radius: 50%;
  width: 24rpx;
  height: 24rpx;
  display: inline-block;
  text-align: center;
  line-height: 24rpx;
  font-size: 18rpx;
  margin-right: 4rpx;
}

/* Menu Card (常用功能) */
.menu-card {
  background: #fff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.menu-header {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.menu-grid {
  display: flex;
  justify-content: space-between;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.menu-icon-img {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.menu-text {
  font-size: 24rpx;
  color: #333;
}

.logout-btn {
  margin: 40rpx 30rpx;
  background: #fff;
  color: #333;
  text-align: center;
  padding: 24rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* List Card (商家管理入口) */
.list-card {
  background: #fff;
  border-radius: 16rpx;
  margin: 20rpx 30rpx;
  padding: 0 30rpx;
}

.list-item {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list-left {
  display: flex;
  align-items: center;
}

.list-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.list-text {
  font-size: 30rpx;
  color: #333;
}

.list-arrow {
  font-size: 28rpx;
  color: #999;
}

