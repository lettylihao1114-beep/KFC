/* pages/menu/menu.wxss */

/* 1. 容器与防穿透 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  overflow: hidden; 
}

/* 2. 自定义顶部栏 */
.custom-nav {
  background: #fff;
  z-index: 999;
}
.nav-row {
  height: 44px; 
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.back-btn { font-size: 40rpx; margin-right: 20rpx; }
.search-bar {
  flex: 1;
  background: #f0f0f0;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-right: 180rpx; 
}
.search-icon { font-size: 24rpx; margin-right: 10rpx; color: #999; }
.search-input { font-size: 24rpx; width: 100%; }

/* 3. 店铺信息区 */
.store-header {
  background: #fff;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 10;
}
.store-row { display: flex; justify-content: space-between; align-items: center; }
.store-name-wrap { display: flex; align-items: center; font-weight: bold; font-size: 32rpx; }
.store-icon { margin-right: 10rpx; }
.arrow-down { font-size: 20rpx; color: #999; margin-left: 10rpx; }
.reserve-btn {
  font-size: 22rpx;
  color: #d62f35;
  border: 1rpx solid #d62f35;
  background: #fff;
  border-radius: 8rpx;
  padding: 4rpx 12rpx;
  margin: 0;
  line-height: 1.5;
}
.store-meta { margin-top: 10rpx; font-size: 22rpx; color: #666; display: flex; align-items: center; }
.tag { background: #333; color: #dcb372; padding: 2rpx 6rpx; border-radius: 4rpx; margin-right: 10rpx; }
.distance { margin-left: auto; }
.menu-tabs { display: flex; margin-top: 20rpx; border-bottom: 1rpx solid #eee; padding-bottom: 10rpx; }
.tab { margin-right: 30rpx; font-size: 28rpx; color: #666; position: relative; }
.tab.active { color: #333; font-weight: bold; }
.tab.active::after {
  content: ''; position: absolute; bottom: -12rpx; left: 0; right: 0;
  height: 4rpx; background: #d62f35;
}

/* 提示条 */
.tips-bar { background: #e8f5e9; padding: 10rpx; text-align: center; font-size: 20rpx; color: #2e7d32; }

/* 4. 菜单主体布局 */
.menu-body {
  flex: 1; 
  display: flex; 
  overflow: hidden; 
}

/* ✨✨✨ 左侧侧边栏 (核心美化区域) ✨✨✨ */
.sidebar {
  width: 180rpx;
  background: #f7f8fa; /* 浅灰背景 */
  height: 100%;
}
.category-item {
  /* 去掉固定高度，用 padding 撑开 */
  /* height: 100rpx;  <-- 删除这行 */
  padding: 32rpx 10rpx; /* 上下增加间距 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx; /* 稍微加大字体 */
  color: #555; /* 字体颜色深一点 */
  position: relative;
  transition: all 0.3s ease; /* 添加丝滑过渡 */
}
/* 选中状态 */
.category-item.active {
  background: #fff;
  color: #333;
  font-weight: bold; /* 加粗 */
  font-size: 30rpx; /* 选中时稍微大一点点 */
}
/* 选中态的红色竖条 */
.category-item.active::before {
  content: ''; position: absolute; left: 0; 
  top: 20rpx; bottom: 20rpx; /* 跟随 padding 调整 */
  width: 8rpx; /* 加宽一点 */
  background: #d62f35; 
  border-radius: 0 6rpx 6rpx 0;
}
.cat-icon { font-size: 36rpx; margin-bottom: 8rpx; }


/* 右侧内容区 */
.content {
  flex: 1; 
  background: #fff;
  height: 100%;
  padding: 0 20rpx;
}
.cat-header {
  font-size: 26rpx;
  font-weight: bold;
  padding: 30rpx 0 20rpx; /* 增加顶部间距 */
  color: #333;
  background: #fff;
}

/* 商品卡片 */
.dish-card { display: flex; margin-bottom: 40rpx; }
.dish-img { width: 180rpx; height: 180rpx; border-radius: 12rpx; background: #eee; }
.dish-info { flex: 1; margin-left: 20rpx; display: flex; flex-direction: column; justify-content: space-between; }
.dish-name { font-size: 30rpx; font-weight: bold; }
.dish-sub { font-size: 22rpx; color: #999; margin-top: 6rpx; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
.price-row { display: flex; justify-content: space-between; align-items: flex-end; margin-top: 10rpx; }
.price-real { color: #d62f35; font-size: 24rpx; font-weight: bold; }
.price-big { font-size: 36rpx; }
.price-old { text-decoration: line-through; color: #999; font-size: 22rpx; margin-left: 10rpx; }
.vip-row { display: flex; align-items: center; }
.vip-tag { background: #333; color: #dcb372; font-size: 18rpx; padding: 0 6rpx; border-radius: 4rpx; margin-right: 6rpx; }
.spec-btn {
  background: #d62f35; color: #fff; font-size: 24rpx;
  padding: 8rpx 24rpx; border-radius: 30rpx; margin: 0; line-height: 1.5;
}

/* 底部占位 */
.spacer { height: 200rpx; }

/* 购物车条 */
.cart-bar {
  position: fixed; bottom: 40rpx; left: 30rpx; right: 30rpx;
  height: 100rpx; background: #222; border-radius: 50rpx;
  display: flex; align-items: center; z-index: 100;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.3);
}
.cart-left { flex: 1; display: flex; align-items: center; padding-left: 40rpx; }
.cart-icon-box { position: relative; margin-right: 20rpx; margin-top: -30rpx; background: #333; width: 90rpx; height: 90rpx; border-radius: 50%; display: flex; align-items: center; justify-content: center; border: 4rpx solid #222; }
.cart-badge { position: absolute; top: 0; right: 0; background: #d62f35; color: #fff; font-size: 20rpx; padding: 2rpx 10rpx; border-radius: 20rpx; border: 2rpx solid #fff; }
.price-box { display: flex; align-items: baseline; color: #fff; }
.currency { font-size: 24rpx; margin-right: 4rpx; }
.total-price { font-size: 40rpx; font-weight: bold; }
.empty-text { color: #999; font-size: 26rpx; }
.coupon-helper { width: 220rpx; text-align: center; color: #dcb372; font-size: 24rpx; display: flex; flex-direction: column; justify-content: center; border-left: 1rpx solid #444; height: 60%; }
.coupon-sub { font-size: 20rpx; opacity: 0.8; }

/* 弹窗通用蒙层 */
.spec-mask, .cart-mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.6); z-index: 90; }

/* 规格弹窗 */
.spec-modal { position: fixed; left: 50%; top: 50%; transform: translate(-50%, -50%); width: 600rpx; background: #fff; border-radius: 16rpx; z-index: 95; padding-bottom: 30rpx; overflow: hidden; }
.spec-header { padding: 30rpx; text-align: center; font-weight: bold; position: relative; border-bottom: 1rpx solid #eee; }
.close-btn { position: absolute; right: 30rpx; top: 30rpx; color: #999; font-size: 40rpx; line-height: 1; }
.spec-content { max-height: 500rpx; padding: 20rpx 30rpx; }
.flavor-group { margin-bottom: 30rpx; }
.flavor-name { font-size: 26rpx; color: #666; margin-bottom: 16rpx; }
.flavor-opts { display: flex; flex-wrap: wrap; }
.flavor-opt { border: 1rpx solid #eee; padding: 10rpx 30rpx; font-size: 24rpx; border-radius: 8rpx; margin-right: 20rpx; margin-bottom: 16rpx; }
.flavor-opt.active { background: #fff0f0; border-color: #d62f35; color: #d62f35; }
.spec-footer { padding: 20rpx 30rpx; display: flex; justify-content: space-between; align-items: center; background: #f9f9f9; }
.spec-price { color: #d62f35; font-size: 36rpx; font-weight: bold; }
.add-cart-btn { background: #d62f35; color: #fff; font-size: 28rpx; padding: 16rpx 60rpx; border-radius: 40rpx; margin: 0; }

/* 购物车详情弹窗 */
.cart-popup { position: fixed; bottom: 130rpx; left: 30rpx; right: 30rpx; background: #fff; border-radius: 20rpx; z-index: 95; overflow: hidden; }
.cart-header { background: #f5f5f5; padding: 20rpx; display: flex; justify-content: space-between; font-size: 24rpx; color: #666; }
.cart-list { max-height: 500rpx; }
.cart-item { display: flex; padding: 30rpx; border-bottom: 1rpx solid #eee; align-items: center; }
.cart-item-info { flex: 1; }
.cart-item-name { font-size: 28rpx; font-weight: bold; display: block; }
.cart-item-spec { font-size: 22rpx; color: #999; margin-top: 6rpx; display: block; }
.cart-item-price { color: #d62f35; font-weight: bold; margin-top: 10rpx; display: block; }
.cart-controls { display: flex; align-items: center; }
.ctrl-btn { width: 44rpx; height: 44rpx; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold; }
.minus { border: 1rpx solid #ddd; color: #666; }
.plus { background: #d62f35; color: #fff; }
.ctrl-num { margin: 0 20rpx; font-size: 28rpx; }

/* AI Button */
.ai-btn {
  background: #fff;
  color: #d62f35;
  border: 1rpx solid #d62f35;
  font-weight: bold;
}

/* AI Modal */
.ai-mask {
  position: fixed; top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6); z-index: 300;
}
.ai-modal {
  position: fixed; bottom: 0; left: 0; right: 0;
  background: #f5f5f5;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 301;
  display: flex; flex-direction: column;
  height: 85vh; /* Increase height to 85% */
}
.ai-header {
  padding: 30rpx; background: #fff;
  display: flex; justify-content: space-between; align-items: center;
  border-bottom: 1rpx solid #eee;
  border-radius: 24rpx 24rpx 0 0;
}
.ai-title { font-size: 32rpx; font-weight: bold; color: #333; }
.ai-header .close-btn { font-size: 40rpx; color: #999; padding: 0 20rpx; position: static; }

.ai-scroll { 
  flex: 1; 
  height: 0; /* 关键：在 flex 容器中必须设置高度为 0 才能正确滚动 */
  width: 100%;
  padding: 20rpx; 
  box-sizing: border-box;
}

.chat-item { display: flex; margin-bottom: 30rpx; }
.chat-item.user { flex-direction: row-reverse; }
.chat-avatar {
  width: 70rpx; height: 70rpx; background: #fff; border-radius: 50%;
  display: flex; justify-content: center; align-items: center; font-size: 36rpx;
  margin: 0 16rpx;
}
/* 思考过程折叠样式 */
.ai-thinking {
  background: #f0f0f0;
  padding: 10rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #666;
}
.ai-thinking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5rpx 0;
}
.ai-thinking-content {
  margin-top: 10rpx;
  white-space: pre-wrap;
  border-top: 1rpx solid #e0e0e0;
  padding-top: 10rpx;
  max-height: 200rpx;
  overflow-y: auto;
}

.chat-bubble {
  max-width: 60%;
  padding: 20rpx; border-radius: 16rpx;
  font-size: 28rpx; line-height: 1.5;
  word-break: break-all;
  display: flex; flex-direction: column; /* 支持垂直排列 */
}
.chat-item.assistant .chat-bubble { background: #fff; color: #333; }
.chat-item.user .chat-bubble { background: #d62f35; color: #fff; }

.ai-footer-input {
  padding: 20rpx; background: #fff;
  display: flex; align-items: center;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.ai-input {
  flex: 1; height: 70rpx; background: #f5f5f5; border-radius: 35rpx;
  padding: 0 30rpx; font-size: 28rpx; margin-right: 20rpx;
}
.ai-send-btn {
  width: 140rpx; height: 70rpx; line-height: 70rpx;
  background: #d62f35; color: #fff; font-size: 28rpx;
  border-radius: 35rpx; padding: 0; margin: 0;
}