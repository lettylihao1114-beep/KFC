page {
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
}

/* 顶部导航 */
.custom-nav {
  background-color: #fff;
  padding-bottom: 10rpx;
}

.nav-row {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 88rpx;
}

.back-btn {
  font-size: 50rpx;
  margin-right: 20rpx;
  color: #333;
}

.search-bar {
  flex: 1;
  background-color: #f5f5f5;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  color: #999;
  font-size: 26rpx;
}

.search-icon {
  margin-right: 10rpx;
}

.together-btn {
  margin-left: 20rpx;
  border: 1rpx solid #C00000;
  color: #333;
  border-radius: 30rpx;
  padding: 6rpx 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.together-btn text {
  color: #C00000;
  font-weight: bold;
  margin-right: 4rpx;
}

.more-btn {
  margin-left: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
  padding: 6rpx 20rpx;
  font-size: 20rpx;
}

/* 门店信息 */
.store-header {
  padding: 0 30rpx 20rpx;
  background-color: #fff;
}

.store-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.store-name-wrap {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
}

.store-icon {
  color: #C00000;
  margin-right: 10rpx;
  font-size: 36rpx;
}

.arrow-down {
  font-size: 20rpx;
  margin-left: 10rpx;
  color: #999;
}

.reserve-btn {
  border: 1rpx solid #C00000;
  color: #C00000;
  font-size: 24rpx;
  background: transparent;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin: 0;
}

.store-meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.tag {
  background-color: #333;
  color: #dcb372;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.distance {
  margin-left: 20rpx;
  color: #999;
}

.menu-tabs {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  border-bottom: 4rpx solid transparent;
}

.tab {
  font-size: 30rpx;
  color: #666;
  margin-right: 40rpx;
  padding-bottom: 10rpx;
}

.tab.active {
  color: #333;
  font-weight: bold;
  border-bottom: 4rpx solid #C00000;
}

.tag-red {
  background-color: #C00000;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 6rpx;
  border-radius: 10rpx 10rpx 10rpx 0;
  position: relative;
  top: -16rpx;
  left: -36rpx;
}

/* 绿色提示 */
.tips-bar {
  background-color: #f0f9eb;
  color: #07c160;
  font-size: 22rpx;
  text-align: center;
  padding: 10rpx 0;
}

/* 菜单主体 */
.menu-body {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.sidebar {
  width: 180rpx;
  background-color: #f8f8f8;
}

.category-item {
  padding: 30rpx 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.category-item.active {
  background-color: #fff;
  color: #333;
  font-weight: bold;
}

.cat-icon {
  font-size: 36rpx;
  margin-bottom: 6rpx;
}

.content {
  flex: 1;
  background-color: #fff;
  padding: 0 20rpx;
}

.cat-header {
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #666;
}

.dish-card {
  display: flex;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.dish-img {
  width: 220rpx;
  height: 220rpx;
  background-color: #f5f5f5;
}

.dish-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.dish-sub {
  font-size: 22rpx;
  color: #999;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price-strike {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 10rpx;
}

.price-real {
  color: #C00000;
  font-size: 24rpx;
}

.price-big {
  font-size: 36rpx;
  font-weight: bold;
}

.spec-btn {
  background-color: #C00000;
  color: white;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  margin: 0;
}

.vip-tag {
  background-color: #fff8e1;
  color: #333;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  display: inline-block;
  margin-top: 10rpx;
  width: fit-content;
}

.spacer {
  height: 120rpx;
}

/* 底部栏 */
.cart-bar {
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}

.cart-left {
  display: flex;
  align-items: center;
  background-color: #999;
  border-radius: 50rpx;
  padding: 10rpx 30rpx 10rpx 10rpx;
  color: white;
  width: 300rpx;
}

.cart-icon-box {
  width: 60rpx;
  height: 60rpx;
  background-color: #ccc; /* 图标占位 */
  border-radius: 50%;
  margin-right: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

.coupon-helper {
  background-color: #333;
  color: #dcb372;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.coupon-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
}

.coupon-count {
  font-size: 24rpx;
  font-weight: bold;
}