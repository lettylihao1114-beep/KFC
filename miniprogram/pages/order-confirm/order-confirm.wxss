.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.header-card, .order-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.badge {
  background: #d62f35;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.address-box, .shop-box {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.addr-detail, .shop-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.addr-user, .shop-addr {
  font-size: 26rpx;
  color: #666;
}

.arrow {
  position: absolute;
  right: 0;
  top: 30%;
  color: #ccc;
}

.time-row {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.time {
  color: #d62f35;
  font-weight: bold;
}

.dine-options {
    display: flex;
    margin-top: 20rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    padding: 4rpx;
}
.opt {
    flex: 1;
    text-align: center;
    padding: 10rpx 0;
    font-size: 28rpx;
    color: #666;
    border-radius: 6rpx;
}
.opt.active {
    background: #fff;
    color: #000;
    font-weight: bold;
    box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.shop-title {
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.order-item {
  display: flex;
  margin-bottom: 30rpx;
}

.item-img {
  width: 100rpx;
  height: 100rpx;
  background: #eee;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
}

.item-name {
  font-size: 30rpx;
  font-weight: bold;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.item-count {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.item-price {
  font-weight: bold;
  font-size: 30rpx;
}

.total-row {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 20rpx;
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.price-box {
  display: flex;
  align-items: baseline;
}

.final-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #d62f35;
  margin-left: 10rpx;
}

.pay-btn {
  background: #d62f35;
  color: #fff;
  border-radius: 40rpx;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  margin: 0;
}