.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}
.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
}
.order-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.order-header {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 15rpx;
}
.order-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.amount {
  font-weight: bold;
  color: #d62f35;
  font-size: 34rpx;
}

.order-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.pay-btn {
  background-color: #d62f35;
  color: #fff;
  font-size: 26rpx;
}
