.container { background: #f5f5f5; min-height: 100vh; padding-bottom: 120rpx; }
.product-img { width: 100%; height: 500rpx; background: #fff; }
.info-card { background: #fff; padding: 30rpx; margin-bottom: 20rpx; }
.name { font-size: 40rpx; font-weight: bold; color: #333; }
.desc { font-size: 26rpx; color: #999; margin-top: 10rpx; display: block; }
.price-row { margin-top: 30rpx; display: flex; align-items: flex-end; }
.price-wrap { color: #d62f35; font-weight: bold; display: flex; align-items: baseline; }
.currency { font-size: 24rpx; }
.price { font-size: 48rpx; }
.vip-tag { font-size: 20rpx; background: #333; color: #dcb372; padding: 2rpx 8rpx; border-radius: 4rpx; margin-left: 10rpx; transform: translateY(-4rpx); }
.old-price { color: #999; text-decoration: line-through; font-size: 24rpx; margin-left: 20rpx; margin-bottom: 6rpx; }

.spec-section { background: #fff; padding: 30rpx; }
.flavor-group { margin-bottom: 30rpx; }
.flavor-title { font-size: 28rpx; color: #666; margin-bottom: 20rpx; display: block; }
.flavor-opts { display: flex; flex-wrap: wrap; }
.opt { border: 1rpx solid #eee; padding: 10rpx 30rpx; border-radius: 8rpx; margin-right: 20rpx; margin-bottom: 20rpx; font-size: 26rpx; color: #333; }
.opt.active { background: #fff0f0; border-color: #d62f35; color: #d62f35; }

.bottom-bar { position: fixed; bottom: 0; left: 0; right: 0; background: #fff; height: 110rpx; display: flex; align-items: center; justify-content: space-between; padding: 0 30rpx; box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05); }
.total-price { font-size: 40rpx; color: #d62f35; font-weight: bold; }
.add-btn { background: #d62f35; color: #fff; border-radius: 40rpx; padding: 0 60rpx; height: 80rpx; line-height: 80rpx; font-size: 30rpx; margin: 0; }