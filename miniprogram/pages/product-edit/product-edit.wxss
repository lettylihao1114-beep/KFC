/* 全局背景设为浅灰，突出中间的白卡片 */
page {
  background-color: #f7f8fa;
}

.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 页面大标题 */
.page-title {
  font-size: 40rpx;
  font-weight: 800;
  margin-bottom: 40rpx;
  color: #333;
  padding-left: 10rpx;
}

/* 表单卡片容器 */
.form-group {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 0 32rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 60rpx;
}

/* 单行表单项 (左右布局) */
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 110rpx; /* 增加高度，手指更容易点 */
  border-bottom: 1rpx solid #f0f0f0;
}

/* 最后一项去掉底边框 */
.form-item:last-child {
  border-bottom: none;
}

/* 左侧标签 */
.label {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  width: 180rpx; /* 固定宽度，保证对齐 */
}

/* 右侧输入框 (文字靠右) */
.input {
  flex: 1;
  text-align: right; /* iOS 风格靠右对齐 */
  font-size: 30rpx;
  color: #333;
  height: 100%;
}

.picker-view {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #666; /* 没选的时候颜色淡一点 */
}

/* ———— 特殊：竖向排列的项 (图片、描述) ———— */
.column-item {
  flex-direction: column;
  align-items: flex-start;
  padding: 30rpx 0;
}

.column-item .label {
  width: 100%;
  margin-bottom: 24rpx;
}

/* 图片预览图 */
.preview-img {
  width: 100%;
  height: 360rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  background-color: #f0f0f0;
  object-fit: cover;
}

/* 上传按钮美化 */
.upload-btn {
  width: 100%;
  background: #f9f9f9;
  color: #666;
  font-size: 28rpx;
  border-radius: 16rpx;
  border: 2rpx dashed #ddd; /* 虚线边框，更有上传的感觉 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  font-weight: normal;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  text-align: center;
  width: 100%;
}

/* 多行文本域 */
.textarea {
  width: 100%;
  height: 240rpx;
  background: #f7f8fa;
  padding: 24rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

/* 底部保存按钮 */
.save-btn {
  background: #d62f35; /* KFC 红 */
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  height: 96rpx;
  line-height: 96rpx;
  box-shadow: 0 10rpx 30rpx rgba(214, 47, 53, 0.3);
  margin-bottom: 40rpx;
}