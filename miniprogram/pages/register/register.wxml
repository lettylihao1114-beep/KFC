<view class="container">
  <view class="header">
    <view class="title">注册新账号</view>
    <view class="subtitle">加入KFC，尽享美味福利</view>
  </view>

  <view class="form-area">
    <view class="input-group">
      <view class="label">账号</view>
      <input class="input" placeholder="请输入用户名 (必填)" bindinput="onInputUsername" />
    </view>

    <view class="input-group">
      <view class="label">手机号</view>
      <input class="input" type="number" maxlength="11" placeholder="请输入11位手机号" bindinput="onInputPhone" />
    </view>

    <view class="input-group">
      <view class="label">密码</view>
      <input class="input" password placeholder="设置登录密码" bindinput="onInputPassword" />
    </view>

    <view class="input-group">
      <view class="label">确认密码</view>
      <input class="input" password placeholder="请再次输入密码" bindinput="onInputConfirm" />
    </view>
  </view>

  <button class="btn-register" bindtap="handleRegister">立即注册</button>

  <view class="login-link" bindtap="goBackLogin">
    已有账号？<text class="highlight">去登录</text>
  </view>
</view>