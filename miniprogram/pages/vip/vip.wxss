/* 容器 */
.container {
  background-color: #f5f5f5;
  height: 100vh;
}
.scroll {
  height: 100%;
}

/* 顶部用户 */
.top-user {
  background-color: #fff;
  padding: 40rpx 30rpx 20rpx;
  margin-bottom: 20rpx;
}
.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
/* 头像占位 */
.avatar-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #eee;
  margin-right: 20rpx;
}
.user-text .name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.user-text .sub {
  font-size: 26rpx;
  color: #999;
  margin-top: 8rpx;
}
.vip-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

/* Banner */
.banner-card {
  margin: 20rpx 30rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #333, #000);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #d4af37; /* 金色 */
}
.banner-main {
  text-align: center;
}
.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
}

/* 列表 */
.section-title {
  padding: 0 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.card-list {
  padding: 0 30rpx 40rpx;
}
.card-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.card-name {
  font-size: 34rpx;
  font-weight: bold;
}
.card-tag {
  font-size: 22rpx;
  background-color: #fff0f0;
  color: #d81e06;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
.card-body {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 30rpx;
}
.card-text {
  color: #666;
  font-size: 28rpx;
}
.price-row {
  color: #d81e06;
  font-weight: bold;
}
.price-symbol { font-size: 24rpx; }
.price-now { font-size: 40rpx; }

/* 按钮 */
.btn.buy {
  background-color: #d81e06;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}